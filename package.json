  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migrate:create": "bun run typeorm migration:create ./src/migration/migration",
    "typeorm:migrate:generate": "bun run typeorm migration:generate ./src/migration/migration -d src/config/migration.config.ts",
    "typeorm:migrate:run": "bun run typeorm migration:run -d src/config/migration.config.ts",
    "typeorm:migrate:revert": "bun run typeorm migration:revert -d src/config/migration.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/platform-socket.io": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/throttler": "^6.2.1",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/geojson": "^7946.0.14",
    "@types/nodemailer": "^6.4.15",
    "@types/passport-local": "^1.0.38",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bun": "^1.1.26",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express-basic-auth": "^1.2.1",
    "fs": "^0.0.1-security",
    "geojson": "^0.5.0",
    "helmet": "^7.1.0",
